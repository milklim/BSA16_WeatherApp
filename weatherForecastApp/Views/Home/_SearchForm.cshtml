
<div class="jumbotron">
    <div class="row">
        <div class="col-md-5">
            @using (Html.BeginForm("CurrentWeather", "Home", FormMethod.Post))
            {
                @Html.Label("Выберете город из списка:")
                @Html.DropDownList("cityName", new SelectList(new string[] { "Dnipropetrovsk", "Kiev", "Lviv", "Odessa", "Kharkiv" }), new { @class = "form-control" })
                <input type="submit" name="button" value="Узнать погоду" class="btn btn-default" />
            }
        </div>
        <div class="col-md-2">
            или
        </div>
        <div class="col-md-5">
            @using (Html.BeginForm("PostRequestHandler", "Home", FormMethod.Post))
            {
                @Html.Label("Введите его название:")
                @Html.TextBox("cityName", "", new { @class = "form-control" })
                <input type="submit" value="Узнать погоду" class="btn btn-default" />
            }
        </div>
    </div>
</div>

